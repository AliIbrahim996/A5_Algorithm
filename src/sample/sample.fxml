<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="379.0"
      prefWidth="668.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">
    <Label layoutX="230.0" layoutY="14.0" text="A5 Algorithm" textAlignment="CENTER" textFill="#2737cc">
        <font>
            <Font name="Consoles Bold" size="24.0"/>
        </font>
    </Label>
    <Button fx:id="read_key" accessibleText="read_key" layoutX="395.0" layoutY="59.0" mnemonicParsing="false"
            onAction="#on_read_key_action" style="-fx-background-color: #00AA00;" text="Read Key" textAlignment="CENTER"
            textFill="#f5f5f5">
        <font>
            <Font name="Century" size="12.0"/>
        </font>
    </Button>
    <Button fx:id="read_file" accessibleText="read_file" layoutX="395.0" layoutY="102.0" mnemonicParsing="false"
            onAction="#on_read_file_action" style="-fx-background-color: #FF0000;" text="Read File" textFill="WHITE"
            visible="false">
        <font>
            <Font name="Century" size="12.0"/>
        </font>
    </Button>
    <RadioButton fx:id="enc" accessibleText="enc" layoutX="395.0" layoutY="146.0" mnemonicParsing="false"
                 onAction="#on_enc_selected" text="Encrypt" visible="false"/>
    <Button fx:id="run" accessibleText="run" layoutX="430.0" layoutY="200.0" mnemonicParsing="false"
            onAction="#on_run_action" style="-fx-background-color: #000099;" text="Run" textAlignment="CENTER"
            textFill="WHITE" visible="false">
        <font>
            <Font name="Century" size="15.0"/>
        </font>
    </Button>
    <Label fx:id="cycle_label" layoutX="14.0" layoutY="273.0" text="Choose cycle" textAlignment="CENTER" visible="false"
           wrapText="true">
        <font>
            <Font name="Century" size="16.0"/>
        </font>
    </Label>
    <ComboBox fx:id="cycle" layoutX="140.0" layoutY="271.0" prefWidth="150.0" visible="false" onAction="#on_cycle_selected"/>
    <Button fx:id="save" layoutX="517.0" layoutY="202.0" mnemonicParsing="false" onAction="#on_save_action"
            style="-fx-background-color: #000055;" text="Save" textFill="WHITE" visible="false">
        <font>
            <Font name="Centaur" size="14.0"/>
        </font>
    </Button>
    <TextArea fx:id="algo_text" accessibleText="algo_text" editable="false" layoutX="14.0" layoutY="55.0"
              prefHeight="200.0" prefWidth="356.0" wrapText="true"/>
    <RadioButton fx:id="dec" layoutX="486.0" layoutY="146.0" mnemonicParsing="false" text="Decrypt" visible="false"
        onAction="#on_de_selected"/>
</Pane>
